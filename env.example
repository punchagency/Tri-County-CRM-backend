# Application Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=mysql
DB_PASSWORD=password
DB_NAME=tri_county_crm

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Security Configuration
BCRYPT_ROUNDS=12
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# GoHighLevel API Configuration
GOHIGHLEVEL_API_KEY=your-gohighlevel-api-key
GOHIGHLEVEL_BASE_URL=https://rest.gohighlevel.com/v1
GOHIGHLEVEL_TIMEOUT=30000
GOHIGHLEVEL_RETRY_ATTEMPTS=3
GOHIGHLEVEL_RETRY_DELAY=1000

# Square POS Configuration
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_ENVIRONMENT=sandbox
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@tricounty.com

# Scraping Configuration
SCRAPING_USER_AGENT=Tri-County-CRM/1.0
SCRAPING_TIMEOUT=10000
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_DELAY=1000
